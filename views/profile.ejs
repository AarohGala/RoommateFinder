    <div class="row">

      <div>
        <form class="form-horizontal" method="post" role="form" action="/handle_profile">
          <fieldset>
            <!-- Name input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="Name (Full name)">Name (Full name)</label>
              <div class="col-md-4">
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-user"></i>
                  </div>
                  <input id="Name (Full name)" name="Name (Full name)" type="text" placeholder="Name (Full name)" class="form-control input-md">
                </div>
              </div>
            </div>

            <!-- Age input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="age">Age</label>
              <div class="col-md-4">
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-birthday-cake"></i>
                  </div>
                  <input id="age" name="age" type="number" class="form-control input-md">
                </div>
              </div>
            </div>

            <!-- Gender -->
            <div class="form-group">
              <label class="col-md-4 control-label" for="gender">Gender</label>
              <div class="col-md-4">
                <label class="radio-inline" for="gender-0">
                  <input type="radio" name="gender" id="gender-0" value="0" checked="checked">Male </label>
                <label class="radio-inline" for="Gender-1">
                  <input type="radio" name="gender" id="gender-1" value="1"> Female </label>
                <label class="radio-inline" for="gender-2">
                  <input type="radio" name="gender" id="gender-2" value="2">Other</label>
              </div>
            </div>

            <!-- Dietary Preference -->
            <div class="form-group">
              <label class="col-md-4 control-label" for="dietary">Dietary Preference</label>
              <div class="col-md-4">
                <label class="radio-inline" for="dietary-0">
                  <input type="radio" name="dietary" id="dietary-0" value="0" checked="checked">Vegetarian</label>
                <label class="radio-inline" for="dietary-1">
                  <input type="radio" name="dietary" id="dietary-1" value="1">Non-Vegetarian</label>
              </div>
            </div>

            <!-- Drinking Habit -->
            <div class="form-group">
              <label class="col-md-4 control-label" for="drinking">Drinking Habit</label>
              <div class="col-md-4">
                <label class="radio-inline" for="drinking-0">
                  <input type="radio" name="drinking" id="drinking-0" value="0" checked="checked">Alcoholic</label>
                <label class="radio-inline" for="drinking-1">
                  <input type="radio" name="drinking" id="drinking-1" value="1">Non-Alcoholic</label>
              </div>
            </div>

            <!-- Smoking Habit -->
            <div class="form-group">
              <label class="col-md-4 control-label" for="drinking">Smoking Habit</label>
              <div class="col-md-4">
                <label class="radio-inline" for="smoking-0">
                  <input type="radio" name="smoking" id="smoking-0" value="0" checked="checked">Non-Smoker</label>
                <label class="radio-inline" for="smoking-1">
                  <input type="radio" name="smoking" id="smoking-1" value="1">Smoker</label>
              </div>
            </div>

            <!-- Room Sharing -->
            <div class="form-group">
              <label class="col-md-4 control-label" for="room">Share a Room</label>
              <div class="col-md-4">
                <label class="radio-inline" for="room-0">
                  <input type="radio" name="room" id="room-0" value="0" checked="checked">Yes</label>
                <label class="radio-inline" for="room-1">
                  <input type="radio" name="room" id="room-1" value="1">No</label>
              </div>
            </div>

            <!-- Location -->
            <div class="form-group">
              <label class="col-md-4 control-label col-xs-12" for="Location">Location</label>
              <div class="col-md-4">
                <select class="form-control form-control-lg">
                  <option>Avery Close</option>
                  <option>Colonial Arms</option>
                  <option>Champions Court</option>
                  <option>The College Inn</option>
                  <option>Centennial Ridge</option>
                  <option>Gorman Crossing</option>
                  <option>Gorman Place</option>
                  <option>Kings Court</option>
                  <option>Kensington Park</option>
                  <option>Mission Valley Garden</option>
                  <option>Pine Knoll</option>
                  <option>Parkwood Village</option>
                  <option>University Commons</option>
                  <option>Western Manor</option>
                  <option>Wolf Ridge</option>
                </select>
              </div>
            </div>

            <!-- Rate input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="Rate">Budget</label>
              <div class="col-md-2">
                  <input id="min_budget" name="min_budget" type="number" placeholder="Minimum Budget" class="form-control input-md">
              </div>
              <div class="col-md-2">
                <input id="max_budget" name="max_budget" type="number" placeholder="Maximum Budget" class="form-control input-md">
              </div>
              </div>

            <!-- Dates -->
            <div class="form-group"> <!-- Date input -->
              <label class="control-label" for="date">Date</label>
              <input class="form-control" id="date" name="date" placeholder="MM/DD/YYY" type="text"/>
            </div>


            <!-- Pet Friendly -->
            <div class="form-group">
              <label class="col-md-4 control-label" for="pet">Are you pet friendly</label>
              <div class="col-md-4">
                <label class="radio-inline" for="pet-0">
                  <input type="radio" name="pet" id="pet-0" value="0" checked="checked">Yes</label>
                <label class="radio-inline" for="pet-1">
                  <input type="radio" name="pet" id="pet-1" value="1">No</label>
              </div>
            </div>

            <!-- Visitors -->
            <div class="form-group">
              <label class="col-md-4 control-label" for="visitors">Do you mind having visitors</label>
              <div class="col-md-4">
                <label class="radio-inline" for="visitors-0">
                  <input type="radio" name="visitors" id="visitors-0" value="0" checked="checked">Yes</label>
                <label class="radio-inline" for="visitors-1">
                  <input type="radio" name="visitors" id="visitors-1" value="1">No</label>
              </div>
            </div>

            <!-- Profession -->
            <div class="form-group">
              <label class="col-md-4 control-label col-xs-12" for="Profession">Profession</label>
              <div class="col-md-4">
                <select class="form-control form-control-lg">
                  <option>Student</option>
                  <option>IT</option>
                  <option>Entrepreneur</option>
                  <option>Other</option>
                </select>
              </div>
            </div>

            <!-- Summary -->
            <div class="form-group">
              <label class="col-md-4 control-label" for="Summary">Summary</label>
              <div class="col-md-4">
                <textarea class="form-control" rows="10" id="Summary" name="Summary">Summary about yourself</textarea>
              </div>
            </div>


            <div class="form-group">
              <label class="col-md-4 control-label"></label>
              <div class="col-md-4">
                <button type ="submit" class="btn btn-success"><span class="glyphicon glyphicon-thumbs-up"></span> Submit</button>
                <a href="#" class="btn btn-danger" value=""><span class="glyphicon glyphicon-remove-sign"></span> Clear</a>

              </div>
            </div>

          </fieldset>
        </form>
      </div>

      <!-- GOOGLE INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google+</h3>

          <% if (user.google.token) { %>
            <p>
              <strong>id</strong>:
              <%= user.google.id %><br>
                <strong>token</strong>:
                <%= user.google.token %><br>
                  <strong>email</strong>:
                  <%= user.google.email %><br>
                    <strong>name</strong>:
                    <%= user.google.name %>
            </p>

            <a href="/unlink/google" class="btn btn-danger">Unlink</a>
            <% } else { %>
              <a href="/connect/google" class="btn btn-danger">Connect Google</a>
              <% } %>

        </div>
      </div>
    </div>
  </div>

<script>
  $(document).ready(function(){
        var date_input=$('input[name="date"]'); //our date input has the name "date"
        var container=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
        var options={
          format: 'mm/dd/yyyy',
          container: container,
          todayHighlight: true,
          autoclose: true,
        };
        date_input.datepicker(options);
      })
</script>
